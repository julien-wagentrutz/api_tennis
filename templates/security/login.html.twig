{% extends 'base.html.twig' %}

{% block title %}Tonny login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <main class="register">
        <section class="section--register">
            <div class="block__right">

            </div>
            <div class="block__left">
                <h2>Sign In</h2>
                <p>Welcome back to the Tonny's community !</p>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="form--row">
                        <div class="block--form_2">
                            <label for="inputEmail">Email</label>
                            <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input" required autofocus>
                        </div>
                    </div>
                    <div class="form--row">
                        <div class="block--form_2">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control input" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form--row space">
                        <div>
                            <button id="register_submit" type="submit" class="btn-signUp">Sign up</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
</form>
{% endblock %}
