{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <main class="register">
        <section class="section--register">
            <div class="block__left">
                <h2>Sign up</h2>
                <p>Welcome to the Tonny's community !</p>
                {{ form_start(registrationForm) }}
                <div class="form--row">
                    <div class="block--form_2">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'input'}})  }}
                        {{ form_errors(registrationForm.email)  }}
                    </div>
                    <div class="block--form_2">
                        {{ form_label(registrationForm.name) }}
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'input'}})  }}
                        {{ form_errors(registrationForm.name)  }}
                    </div>
                </div>
                <div class="form--row">
                    <div class="block--form">
                        {{ form_label(registrationForm.plainPassword, 'Password') }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input'}})  }}
                        {{ form_errors(registrationForm.plainPassword)  }}
                    </div>
                </div>
                <div class="form--row">
                    <div class="block--form">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox'}}) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_errors(registrationForm.agreeTerms)  }}
                    </div>
                </div>
                <div class="form--row space">
                    <div>
                        <button disabled id="register_submit" type="submit" class="btn-signUp">Sign up</button>
                    </div>
                    <p>Already have an account ? <a href="{{ path('app_login') }}">Sign In</a></p>
                </div>
                {{ form_end(registrationForm) }}
            </div>
            <div class="block__right">

            </div>
        </section>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('main') }}
{% endblock %}

